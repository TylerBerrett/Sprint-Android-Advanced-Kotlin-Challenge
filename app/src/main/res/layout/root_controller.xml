<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/et_top_left_top"
        android:hint="1"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@id/et_top_right_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_top_right_top"
        android:hint="2"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_top_left_bottom"
        android:hint="3"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintRight_toLeftOf="@id/et_top_right_top"
        app:layout_constraintTop_toBottomOf="@id/et_top_left_top"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_top_right_bottom"
        android:hint="4"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_top_right_top"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/calculate_button"
        android:text="calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_top_left_bottom"/>

    <EditText
        android:id="@+id/et_bottom_left_top"
        android:hint="5"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/et_top_right_top"
        app:layout_constraintTop_toBottomOf="@id/calculate_button"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bottom_right_top"
        android:hint="6"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/calculate_button"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_bottom_left_bottom"
        android:hint="7"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_bottom_left_top"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_bottom_right_bottom"
        android:hint="8"
        android:layout_width="200dp"
        android:textSize="64sp"
        android:inputType="number"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_bottom_right_top"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>